<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupTheme">@style/PopUpMenuTheme</item>
    </style>

    <style name="AppTheme.HomeScreenActivity">
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.MainActivity">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.SplashScreenActivity">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CancelOrOkButtonTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ForgotPasswordButtonTheme" parent="Widget.AppCompat.Button.Borderless">

    </style>

    <style name="DatePickerDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down_date_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_up_date_dialog</item>
    </style>

    <style name="ForgotPasswordDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <style name="IncomeProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
    </style>

    <style name="PopUpMenuTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">#000000</item>
    </style>

    <style name="ResetPasswordButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorResetPasswordButton</item>
        <item name="android:textColor">@color/colorAllButtonText</item>
    </style>

    <declare-styleable name="RoundedHorizontalProgressBar">
        <attr name="backgroundColor" format="color"/>
        <attr name="progressColor" format="color"/>
        <attr name="isRounded" format="boolean"/>
    </declare-styleable>

    <style name="ShowMoreButtonTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SignInUsingEmailOrGoogleDialogBoxProgressBarTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
