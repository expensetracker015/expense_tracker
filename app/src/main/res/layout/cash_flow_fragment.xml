<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:text="@string/cash_flow"
                android:textSize="20sp"
                android:textColor="#000000">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/am_i_spending_more_than_i_make"
                android:textSize="16sp">

            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#E0E0E0">

            </View>

            <TextView
                android:id="@+id/cashFlowCurrentMonthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:textSize="16sp">

            </TextView>

            <TextView
                android:id="@+id/cashFlowBalanceAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="30sp"
                android:textColor="#000000">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15sp"
                        android:text="@string/income"
                        android:textSize="17sp"
                        android:textColor="#000000">

                    </TextView>

                    <TextView
                        android:id="@+id/cashFlowIncomeAmountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        tools:ignore="RelativeOverlap">

                    </TextView>

                </RelativeLayout>

                <com.sasank.roundedhorizontalprogress.RoundedHorizontalProgressBar
                    android:id="@+id/cashFlowIncomeProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    app:backgroundColor="#E0E0E0"
                    app:progressColor="#4CAF50"
                    app:isRounded="true"
                    style="?android:attr/progressBarStyleHorizontal">

                </com.sasank.roundedhorizontalprogress.RoundedHorizontalProgressBar>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15sp"
                        android:text="@string/expenses"
                        android:textSize="17sp"
                        android:textColor="#000000">

                    </TextView>

                    <TextView
                        android:id="@+id/cashFlowExpenseAmountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_alignParentEnd="true"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        tools:ignore="RelativeOverlap">

                    </TextView>

                </RelativeLayout>

                <com.sasank.roundedhorizontalprogress.RoundedHorizontalProgressBar
                    android:id="@+id/cashFlowExpenseProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    app:backgroundColor="#E0E0E0"
                    app:progressColor="#E53935"
                    app:isRounded="true"
                    style="?android:attr/progressBarStyleHorizontal">

                </com.sasank.roundedhorizontalprogress.RoundedHorizontalProgressBar>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <include
        layout="@layout/month_year_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

    </include>

</RelativeLayout>